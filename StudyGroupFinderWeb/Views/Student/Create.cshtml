@model StudyGroupFinderWeb.Models.StudentViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Opret ny studerende</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
</head>
<body>
    @using (Html.BeginForm())
    {
        <h4>Tilføj ny studerende</h4>
        <hr />
        <b>@Html.DisplayNameFor(model => model.Name):</b>
        @Html.EditorFor(model => model.Name)
        @Html.ValidationMessageFor(model => model.Name, " *")
        <br />
        <b>@Html.DisplayNameFor(model => model.Study):</b>
        @Html.EditorFor(model => model.Study)
        @Html.ValidationMessageFor(model => model.Study, " *")
        <br />
        <b>@Html.DisplayNameFor(model => model.SeeksGroup)</b>
        <span>Ja</span>@Html.RadioButtonFor(model => model.SeeksGroup, true)
        <span>Nej</span>@Html.RadioButtonFor(model => model.SeeksGroup, false)
        @Html.ValidationMessageFor(model => model.SeeksGroup, " *")
        <br />
        <b>Indtast personlige egenskaber adskilt af mellemrum:</b> @Html.EditorFor(model => model.Attributes)
        <br />
        <b>Indtast studierelevante egenskaber adskilt af mellemrum:</b> @Html.EditorFor(model => model.StudyAttributes)
        <br />
        <b>Indtast naboer adskilt af mellemrum:</b> @Html.EditorFor(model => model.Neighbors)
        <div>@Html.ValidationSummary()</div>
        <input type="submit" value="Opret studerende" />
    }    
    <div>
        @Html.ActionLink("Tilbage til oversigten", "Index")
    </div>
</body>
</html>
